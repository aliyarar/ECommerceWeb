@model List<ECommerceWeb.DB.Categories>



<ul class="nav navbar-nav">

    @foreach (var cat in Model)
    {
        if (cat.Categories1.Any(x => x.IsDeleted != true))
        {
            <li class="dropdown" >
                <a href="@Url.Action("Index","i",new { id=cat.Id })" class="dropdown-toggle" data-toggle="dropdown-menu">@cat.Name<span class="caret"></span></a>
                @_MenuHelper.MenuRecursive(cat.Categories1.Where(x=>x.IsDeleted!=true).ToList())
            </li>
        }
        else
        {
            <li><a href="@Url.Action("Index","i",new { id=cat.Id })">@cat.Name</a></li>
        }

    }
    @*Todo: Buraya Kategoriler gelecek link-2 için acılır menü ek html css var*@

</ul>
