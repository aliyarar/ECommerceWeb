@helper MenuRecursive(List<ECommerceWeb.DB.Categories> cats)
{


    <ul class="dropdown-menu">
        @foreach (var cat in cats)
        {
            if (cat.Categories1.Any(x=>x.IsDeleted!=true))
            {
                <li class="dropdown-submenu">
                    <a href="~/i/index/@cat.Id">@cat.Name</a>
                    @MenuRecursive(cat.Categories1.ToList())
                </li>
            }
            else
            {
                <li><a href="~/i/index/@cat.Id">@cat.Name</a></li>
                @*<li><a href="@Url.Action("Index","i",new {id=cat.Id })">@cat.Name</a></li>
                    üstte Url e kzıdı using e web.mvc eklendi yine kızdı sonra linkleri  tilda ile yaptı
                *@
            }
        }
    </ul>

}

